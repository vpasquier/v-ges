{
	"name": "Google Engine Switch",
	"version": "1.0.0",
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"description": "An extension to switch search engine in one shortcut",
	"icons": {
		"16": "images/v-16.png",
		"128": "images/v-128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": [
			"chrome-bkg.js"
		],
		"persistent": true
	},
	"permissions": [
		"cookies",
		"tabs",
		"http://*/*",
		"https://*/*",
		"activeTab",
		"https://ajax.googleapis.com/",
		"notifications",
		"background",
		"declarativeContent",
		"<all_urls>",
		"webRequest"
	],
	"omnibox": {
		"keyword": "OMNIBOX-KEYWORD"
	},
	"page_action": {
		"default_icon": {
			"19": "images/v-19.png",
			"38": "images/v-38.png"
		},
		"default_title": "Googe Engine Switch",
		"default_popup": "popup.html"
	}
}